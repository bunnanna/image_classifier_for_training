<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./head.ejs") %>
</head>

<body>
    <%- include("./header.ejs") %>
        <article class="row h-100 bbgf text-center">
            <div class="row align-items-center">
                <h1 class="head"><a href="/">Login Page</a></h1>
            </div>
            <div class="row align-items-center">
                <div class="col"></div>
                <div class="card col-sm-5 login">
                    <section class="vertical-center">
                        <form action="/login" method="post">
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="UserId">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="password">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary mb-3">Login</button>
                                </div>
                                <div class="col">
                                    <button type="reset" class="btn btn-secondary mb-3">Clear</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col"></div>
            </div>
            </div>
            <div class="row">
                <div class="col g-sm-0"></div>
                <div class="alertbox col g-sm-0">
                    <% if (chk) { %>
                    <p><%= chk %> </p> 
                    <% } %>
                </div>
                <div class="col g-sm-0"></div>
            </div>
        </article>
        <%- include("./footer.ejs") %>
            <script src="./app.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                crossorigin="anonymous"></script>
</body>

</html>